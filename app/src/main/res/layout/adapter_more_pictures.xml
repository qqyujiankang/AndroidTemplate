<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="horizontal">



    <ImageView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/iv_particulars"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@mipmap/tj" />
    <ImageView

        app:layout_constraintTop_toTopOf="@+id/iv_particulars"
        app:layout_constraintRight_toRightOf="@+id/iv_particulars"
        android:id="@+id/iv_cha"
        android:padding="@dimen/space_10"
        android:layout_width="@dimen/space_60"
        android:layout_height="@dimen/space_60"
        android:layout_alignTop="@+id/iv_particulars"
        android:layout_toRightOf="@+id/iv_particulars"
        android:src="@mipmap/delete" />
</androidx.constraintlayout.widget.ConstraintLayout>