<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/space_20">

        <ImageView
            android:id="@+id/iv_bao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:src="@mipmap/bao" />

        <ImageView

            android:id="@+id/iv_commodity"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_below="@+id/iv_bao"
            android:layout_marginLeft="19dp"
            android:src="@mipmap/zhaoxiangji" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/iv_commodity"
            android:text="伯纳天纯幼猫粮1.5kg离乳期幼猫天然 粮接口为奇偶将饿哦爱谁就懂啊"
            android:textColor="#ff666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/iv_commodity"
            android:text="10.9"
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/iv_vpi_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_toRightOf="@+id/iv_commodity"
            android:drawableLeft="@mipmap/vip"
            android:gravity="center"
            android:text="￥9.9"
            android:textColor="#ffef4321"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_vpi_price"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上架"
                android:textColor="#999999"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="编辑"
                android:textColor="#999999"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="#EF4321"
                android:textSize="13dp" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>