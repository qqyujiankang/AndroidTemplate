<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cn.android.ui.activity.PostEvaluationActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/t_test_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="发布评价" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_01"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/test10" />

        <TextView
            android:id="@+id/tv_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_01"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_01"
            android:text="商品名称商品名称商品名称" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_01"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv_01"
            android:text="¥10"
            android:textColor="#EF4321" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="宝贝满足你的期待吗？说说它的有点和每种不足的地 方吧~"
        android:paddingLeft="12dp"
        android:textColor="#AAAAAA"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_bind_commit"
        style="@style/MyButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:text="提交反馈"
        android:textColor="@color/textColor" />
</LinearLayout>
