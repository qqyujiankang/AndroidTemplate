<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/iv_tu"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="23dp"
            android:src="@mipmap/zhaoxiangji" />

        <TextView
            android:id="@+id/tv_bame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_tu"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/iv_tu"
            android:text=""></TextView>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bame"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_tu"
            android:text=""
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_alignLeft="@+id/tv_price"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/vip"
            android:text=""
            android:textColor="#EF4321" />

        <ImageView
            android:id="@+id/cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_vip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/xin" />
    </RelativeLayout>
</LinearLayout>