<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Rl_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_order_reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="订单编号:"
            android:textColor="#3C3C3C" />

        <TextView
            android:id="@+id/tv_ordercode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_order_reference"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_order_reference"
            android:text=""
            android:textColor="#969696" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_order_reference"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" />

        <View
            android:id="@+id/vv"
            style="@style/HorizontalLineStyle"
            android:layout_below="@+id/tv_order_reference"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vv" />


        <View
            android:id="@+id/vv1"
            style="@style/HorizontalLineStyle"
            android:layout_below="@+id/recyclerView"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp" />

        <RelativeLayout
            android:id="@+id/ll02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vv1"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_test03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="订单合计:"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_test03"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_test03"
                android:paddingTop="10dp"
                android:text="￥64564646"
                android:textColor="#EF4321" />

            <TextView
                android:id="@+id/tv_sum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:paddingTop="15dp"
                android:text="共1件"
                android:textSize="13sp" />


        </RelativeLayout>

        <View
            android:id="@+id/vv2"
            style="@style/HorizontalLineStyle"
            android:layout_below="@+id/ll02"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp" />

        <RelativeLayout
            android:id="@+id/Rl_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vv2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#FAFAFA"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="18256789087"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:text="陕西省西安市高新四路丹枫国际B座" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Rl_02"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/btn_01"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/selector_button"
                android:text="确认发货"
                android:textColor="#333333" />

            <Button
                android:id="@+id/btn_02"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/btn_01"
                android:background="@drawable/bg_w"
                android:text="联系买家"
                android:textColor="#666666" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>